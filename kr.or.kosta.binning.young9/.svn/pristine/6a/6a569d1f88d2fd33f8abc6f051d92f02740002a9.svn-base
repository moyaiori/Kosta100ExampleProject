<%@ page contentType="text/html; charset=utf-8" %>
<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>로그인 화면 샘플</title>
    <style>
    body {
	  font-family: '돋움' Century Gothic, Arial, Serif;
	}
	
	table {
	  border-collapse: collapse;
	  width: 300px;
	  margin: 50px auto;
    }
    
    th, td {
      background-color: #E7E7E7;
      color: #949494;
	  border: solid 1px silver;
	  padding: 5px;
	  text-align: center;
	}
	
	.button {
	  width: 70px;
	  height: 30px;
	  margin: 3px;
	  color: white;
	  background-color: #53C14B;
	}
	</style>
  </head>
  
  <body>
    <form action="login.do" method="post">
      <table>
        <tr>
          <th colspan="2">회원 로그인</th>
        </tr>
        <tr>
          <td>아이디</td>
          <td><input type="text" name="id" maxlength="8"></td>
        </tr>
        <tr>
          <td>비밀번호</td>
          <td><input type="password" name="passwd" maxlength="8"></td>
        </tr>
        <tr>
          <td colspan="2">
            <input type="submit" value="로그인" class="button">
            <input type="reset"  value="취소"   class="button">
          </td>
        </tr>
      </table>
	</form>
  </body>
</html>